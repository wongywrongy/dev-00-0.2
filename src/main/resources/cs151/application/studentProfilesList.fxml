<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs151.application.StudentProfilesListController">

    <top>
        <ToolBar>
            <items>
                <Button onAction="#goDefineProfiles" text="← Define Profiles" />
                <Separator orientation="VERTICAL" />
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="All Student Profiles" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button onAction="#homeButtonClicked" text="Home" />
            </items>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="8">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <TableView fx:id="tblProfiles" prefHeight="560.0" prefWidth="1058.0">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="180" text="Full Name" />
                        <TableColumn fx:id="colAcademic" prefWidth="120" text="Academic Status" />
                        <TableColumn fx:id="colEmployed" prefWidth="95" text="Employed" />
                        <TableColumn fx:id="colJob" prefWidth="170" text="Job Details" />
                        <TableColumn fx:id="colLanguages" prefWidth="220" text="Languages" />
                        <TableColumn fx:id="colDatabases" prefWidth="170" text="Databases" />
                        <TableColumn fx:id="colRole" prefWidth="140" text="Preferred Role" />
                        <TableColumn fx:id="colFlags" prefWidth="110" text="Flags" />
                        <TableColumn fx:id="colComments" prefWidth="260" text="Latest Comment" />
                    </columns>
                </TableView>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select a row and click the button below to delete a student" wrappingWidth="319.853515625" />
            <Button mnemonicParsing="false" onAction="#deleteSelectedStudent" prefHeight="26.0" prefWidth="150.0" text="Delete Selected Student" />
            </children>
        </VBox>
    </center>
</BorderPane>
