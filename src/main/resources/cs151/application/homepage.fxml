<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.application.MainController">

    <top>
        <VBox spacing="6">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <children>
                <Label text="Student Profile Manager"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="Home"
                       style="-fx-font-size: 12px; -fx-text-fill: -fx-text-inner-color;"/>
                <Separator/>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="18" alignment="CENTER">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>
            <children>
                <Label text="Choose an action:" style="-fx-font-size: 14px;"/>

                <HBox spacing="12" alignment="CENTER">
                    <children>
                        <Button text="Define Programming Languages"
                                prefWidth="260"
                                onAction="#defineProgrammingLanguagesClick"/>
                        <Button text="Define Student Profiles"
                                prefWidth="220"
                                onAction="#defineStudentProfilesClick"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
        </HBox>
    </bottom>

    <padding>
        <Insets top="6" right="6" bottom="6" left="6"/>
    </padding>
</BorderPane>
