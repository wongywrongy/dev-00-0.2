<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="260.0" prefWidth="552.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="cs151.application.MainController">

    <top>
        <VBox spacing="6">
            <padding>
                <Insets bottom="12" left="12" right="12" top="12" />
            </padding>
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Student Profile Manager" />
                <Label style="-fx-font-size: 12px; -fx-text-fill: -fx-text-inner-color;" text="Home" />
                <Separator />
            </children>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="18">
            <padding>
                <Insets bottom="24" left="24" right="24" top="24" />
            </padding>
            <children>
                <Label style="-fx-font-size: 14px;" text="Choose an action:" />

                <HBox alignment="CENTER" spacing="12">
                    <children>
                        <Button onAction="#defineProgrammingLanguagesClick" prefWidth="260" text="Define Programming Languages" />
                        <Button onAction="#defineStudentProfilesClick" prefWidth="220" text="Define Student Profiles" />
                    </children>
                </HBox>
            <Button onAction="#searchStudentProfilesClick" mnemonicParsing="false" prefHeight="26.0" prefWidth="221.0" text="Search Student Profiles" />
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="8" left="8" right="8" top="8" />
            </padding>
        </HBox>
    </bottom>

    <padding>
        <Insets bottom="6" left="6" right="6" top="6" />
    </padding>
</BorderPane>
